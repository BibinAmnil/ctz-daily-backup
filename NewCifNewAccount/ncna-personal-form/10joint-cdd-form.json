{
  "type": "object",
  "className": "fs-1",
  "form_title": "joint_cdd",
  "isDisabled": false,
  "hasStep": true,
  "submissionHidden": false,
  "required": [
    "entitled_with_fund",
    "customer_introduce_by",
    "met_in_person",
    "declared_anticipated_annual_transaction",
    "expected_anticipated_annual_transaction",
    "transaction_justification",
    "transaction_fund_details",
    "number_of_transaction",
    "yearly_income"
  ],
  "properties": {
    "is_high_risk_account": {
      "type": "string",
      "title": "Is High Risk Account?",
      "group": "Risk",
      "enum": ["Yes", "No"],
      "readOnly": true
    },
    "account_info": {
      "type": "string",
      "group": "Account Information",
      "hideTitle": true,
      "width": "full"
    },
    "is_minor_account": {
      "type": "boolean",
      "title": "Is Minor Account?",
      "hideTitle": true,
      "group": "Declaration"
    },
    "is_sanction": {
      "type": "boolean",
      "title": "Is Sanctioned?",
      "hideTitle": true,
      "group": "Declaration"
    },
    "is_cib_list": {
      "type": "boolean",
      "title": "Is CIB Black Listed?",
      "hideTitle": true,
      "group": "Declaration"
    },
    "is_block_list": {
      "type": "boolean",
      "title": "Is Internal Block Listed?",
      "hideTitle": true,
      "group": "Declaration"
    },

    "nationality": {
      "type": "string",
      "title": "Nationality",
      "group": "Geographical Risk",
      "default": "NP",
      "readOnly": true,
      "hideTitle": true
    },
    "entitled_with_fund": {
      "type": "string",
      "title": "Is Ultimately account holder is entitled to the funds ?",
      "group": "Beneficial Owner",
      "enum": ["Yes", "No"],
      "width": 8
    },

    "loan_status": {
      "type": "string",
      "title": "Has the customer taken any loan with us in the past ?",
      "group": "statusOfClient",
      "enum": ["Yes", "No"],
      "width": 8,
      "readOnly": true
    },
    "is_blacklisted": {
      "type": "string",
      "title": "Has the customer being blacklisted by us ?",
      "group": "statusOfClient",
      "enum": ["Yes", "No"],
      "width": 8,
      "readOnly": true
    },

    "customer_introduce_by": {
      "type": "string",
      "title": "Introducer Name",
      "group": "statusOfClient",
      "enum": [
        "Bank Staff",
        "Other Account Holder",
        "Walk-in Customer",
        "Local Government Bodies"
      ],
      "width": 8,
      "readOnly": true
    },

    "met_in_person": {
      "type": "string",
      "title": "Has the customer been met in-person (face-to-face) ?",
      "group": "statusOfClient",
      "enum": ["Yes", "No"],
      "width": 8,
      "readOnly": true
    },
    "declared_anticipated_annual_transaction": {
      "type": "string",
      "title": "Anticipated Annual Transaction",
      "group": "Transaction Details",
      "pattern": "^[0-9,]+$",
      "errorMessage": {
        "pattern": "Only numbers are allowed"
      }
    },
    "expected_anticipated_annual_transaction": {
      "type": "string",
      "title": "Expected Annual Transaction",
      "group": "Transaction Details",
      "pattern": "^[0-9,]+$",
      "errorMessage": {
        "pattern": "Only numbers are allowed"
      }
    },
    "number_of_transaction": {
      "type": "string",
      "title": "Number of Transaction",
      "group": "Transaction Details",
      "pattern": "^[0-9]{1,3}$",
      "errorMessage": {
        "pattern": "Only 3 numbers are allowed"
      }
    },
    "yearly_income": {
      "type": "string",
      "title": "Yearly Income (Gross Income)",
      "group": "Transaction Details",
      "pattern": "^[0-9,]+$",
      "errorMessage": {
        "pattern": "Only numbers are allowed"
      }
    },
    "transaction_justification": {
      "type": "string",
      "title": "Is transaction amount justified with customer profile?",
      "group": "Transaction Details",
      "enum": ["Yes", "No"],
      "width": 8
    },
    "transaction_fund_details": {
      "type": "string",
      "title": "Is the source of funds clear and identifiable ?",
      "group": "Transaction Details",
      "enum": ["Yes", "No"],
      "width": 8
    },

    "calculate_risk": {
      "type": "string",
      "title": "Calculate Risk",
      "group": "Risk"
    },
    "cdd_risk_level": {
      "type": "string",
      "group": "Risk",
      "title": "Risk Level",
      "enum": ["Low Risk", "Medium Risk", "High Risk"],
      "readOnly": true
    },
    "cdd_risk_score": {
      "type": "number",
      "title": "Risk Score",
      "group": "Risk",
      "readOnly": true
    },

    "acknowledge": {
      "type": "boolean",
      "width": "full",
      "hideTitle": true,
      "title": "I acknowledge that the details provided are correct and complete.",
      "group": ""
    },
    "approval_status": {
      "type": "string",
      "enum": ["Approve", "Reject", "Revert"],
      "width": "half",
      "title": "Approval Status",
      "group": ""
    },
    "approval_remarks": {
      "type": "string",
      "width": "half",
      "title": "Approval Remarks",
      "group": ""
    }
  },

  "dependencies": {
    "customer_introduce_by": {
      "oneOf": [
        {
          "properties": {
            "customer_introduce_by": {
              "enum": ["Bank Staff"]
            },
            "employee_id": {
              "type": "string",
              "title": "Bank Staff CIF Number",
              "group": "statusOfClient",
              "width": 8,
              "readOnly": true
            }
          },
          "required": ["employee_id"]
        },
        {
          "properties": {
            "customer_introduce_by": {
              "enum": ["Other Account Holder"]
            },
            "introducer_account_number": {
              "type": "string",
              "title": "Introducer Account Number",
              "group": "statusOfClient",
              "readOnly": true,
              "pattern": "^[0-9]{14}$",
              "message": "Must be of 14 Digits",
              "width": 8,
              "errorMessage": {
                "pattern": "Must be of 14 Digits"
              }
            }
          },
          "required": ["introducer_account_number"]
        },
        {
          "properties": {
            "customer_introduce_by": {
              "enum": ["Walk-in Customer", "Local Government Bodies"]
            }
          }
        }
      ]
    },

    "source_of_income": {
      "if": {
        "properties": {
          "source_of_income": {
            "enum": ["8080c1f9-cf7c-40f8-9a06-277e4eb02a5b"]
          }
        }
      },
      "then": {
        "properties": {
          "business_type": {
            "type": "string",
            "title": "Business Type",
            "group": "OccupationAndIncome"
          }
        }
      }
    },
    "account_info": {
      "if": {
        "properties": {
          "account_info": {
            "enum": ["INDIVIDUAL"]
          }
        }
      },
      "then": {
        "properties": {
          "has_related_party": {
            "type": "string",
            "title": "Has a Power of Attorney / Mandatee been assigned ?",
            "enum": ["Yes", "No"],
            "group": "Related Parties",
            "width": 8,
            "readOnly": true
          }
        },
        "dependencies": {
          "has_related_party": {
            "if": {
              "properties": {
                "has_related_party": {
                  "enum": ["Yes"]
                }
              }
            },
            "then": {
              "properties": {
                "related_party": {
                  "type": "array",
                  "hideTitle": true,
                  "readOnly": true,
                  "minItems": 0,
                  "title": "Related Party",
                  "items": {
                    "type": "object",
                    "properties": {
                      "related_party_designation": {
                        "type": "string",
                        "title": "Designation",
                        "group": "personalInformation",
                        "hideTitle": true,
                        "enum": ["Power of Attorney", "Mandatee"]
                      }
                    },
                    "dependencies": {
                      "related_party_designation": {
                        "if": {
                          "properties": {
                            "related_party_designation": {
                              "enum": ["Power of Attorney"]
                            }
                          }
                        },
                        "then": {
                          "properties": {
                            "related_party_first_name": {
                              "type": "string",
                              "title": "First Name",
                              "group": "personalInformation",
                              "hideTitle": true,
                              "pattern": "^[a-zA-Z.\\s]*$",
                              "errorMessage": {
                                "pattern": "Alphabets and spaces only"
                              }
                            },
                            "related_party_middle_name": {
                              "type": "string",
                              "title": "Middle Name",
                              "group": "personalInformation",
                              "hideTitle": true,
                              "pattern": "^[a-zA-Z.\\s]*$",
                              "errorMessage": {
                                "pattern": "Alphabets only"
                              }
                            },
                            "related_party_last_name": {
                              "type": "string",
                              "title": "Last Name",
                              "group": "personalInformation",
                              "hideTitle": true,
                              "pattern": "^[a-zA-Z.\\s]*$",
                              "errorMessage": {
                                "pattern": "Alphabets and spaces only"
                              }
                            },
                            "related_party_family_account_holder": {
                              "type": "string",
                              "title": "Is s/he family member of account holder?",
                              "enum": ["Yes", "No"],
                              "group": "personalInformation",
                              "hideTitle": true
                            },
                            "related_party_relation_with_account_holder": {
                              "type": "string",
                              "title": "Relationship with the accoutholder ?",
                              "group": "personalInformation",
                              "hideTitle": true
                            }
                          }
                        },
                        "else": {
                          "properties": {
                            "related_party_detail": {
                              "type": "array",
                              "minItems": 1,
                              "group": "Mandatee Detail",
                              "hideTitle": true,
                              "width": "full",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "related_party_first_name": {
                                    "type": "string",
                                    "title": "First Name",
                                    "group": "personalInformation",
                                    "hideTitle": true,
                                    "pattern": "^[a-zA-Z.\\s]*$",
                                    "errorMessage": {
                                      "pattern": "Alphabets and spaces only"
                                    },
                                    "width": 8
                                  },
                                  "related_party_middle_name": {
                                    "type": "string",
                                    "title": "Middle Name",
                                    "group": "personalInformation",
                                    "hideTitle": true,
                                    "pattern": "^[a-zA-Z.\\s]*$",
                                    "errorMessage": {
                                      "pattern": "Alphabets only"
                                    },
                                    "width": 8
                                  },
                                  "related_party_last_name": {
                                    "type": "string",
                                    "title": "Last Name",
                                    "group": "personalInformation",
                                    "hideTitle": true,
                                    "pattern": "^[a-zA-Z.\\s]*$",
                                    "errorMessage": {
                                      "pattern": "Alphabets and spaces only"
                                    },
                                    "width": 8
                                  },
                                  "related_party_family_account_holder": {
                                    "type": "string",
                                    "title": "Is s/he a family member of the account holder ?",
                                    "enum": ["Yes", "No"],
                                    "group": "personalInformation",
                                    "hideTitle": true,
                                    "width": 8
                                  },
                                  "related_party_relation_with_account_holder": {
                                    "type": "string",
                                    "title": "Relationship with the accoutholder ?",
                                    "group": "personalInformation",
                                    "hideTitle": true,
                                    "width": 8
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  },
                  "group": "personalInformation"
                }
              }
            }
          }
        },
        "required": ["has_related_party"]
      }
    },

    "approval_status": {
      "if": {
        "properties": {
          "approval_status": {
            "enum": ["Revert"]
          }
        }
      },
      "then": {
        "properties": {
          "revert_to": {
            "type": "string",
            "title": "Revert To",
            "width": "half"
          }
        },
        "required": ["revert_to"]
      }
    }
  }
}
